<h1>ついーとじおすとりーむ</h1>

<h3>日本国内のgeoタグ付きtweetをリアルタイムで表示</h3>

<hr>

<h3>Tweet</h3>

<div id="progress"></div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    setTimeout(function() {
      var source = new EventSource('/stream/stream');

      function eventLogger(event){
        var t = JSON.parse(event.data);
        
        $("#progress").prepend(
          "@" + t.id + "<br>"
          + t.place + "【" + t.lat + ", " + t.lng + "】 -> " + t.tweet + "<br><hr>");
      }

      source.onmessage = eventLogger;
    }, 10);
  });
</script>
